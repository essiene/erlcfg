{erl_opts, [
	warnings_as_errors,
	warn_export_all
]}.

{deps, [
    {pmod_transform, ".*", {git, "https://github.com/erlang/pmod_transform", "HEAD"}}
]}.

{port_env, [
    {"linux", "CXXFLAGS","$CXXFLAGS -O3 -std=c++11"},
    {"linux", "LDFLAGS", "$LDFLAGS -lstdc++"}
]}.

{port_specs,[{"linux", "priv/erlcfg_nifs.so", ["c_src/*.cpp"]}]}.

%{pre_hooks, [{clean, "rm -fr ebin priv erl_crash.dump"}]}.
%{post_hooks, [{clean, "rm -fr ebin doc priv erl_crash.dump c_src/*.o c_src/*.d"}]}.
